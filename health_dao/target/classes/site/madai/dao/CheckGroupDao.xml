<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="site.madai.dao.CheckGroupDao">

    <select id="findCheckItemIdsByCheckGroupId" parameterType="integer"
            resultType="integer">
  select checkitem_id from t_checkgroup_checkitem where checkgroup_id = #{id}
    </select>

    <select id="findById" parameterType="Integer"
            resultType="checkgroup">
        select * from `t_checkgroup` where id = #{id}
    </select>
    <!--新增-->
    <insert id="add" parameterType="CheckGroup">
        <selectKey resultType="Integer" order="AFTER" keyProperty="id">
            SELECT LAST_INSERT_ID()
        </selectKey>
        insert into t_checkgroup(code,name,sex,helpCode,remark,attention)
        values
        (#{code},#{name},#{sex},#{helpCode},#{remark},#{attention})
    </insert>
    <!--设置检查组和检查项的关联关系-->
    <insert id="setCheckGroupAndCheckItem" parameterType="hashmap">
        insert into t_checkgroup_checkitem(checkgroup_id,checkitem_id)
      		values
      	(#{checkgroup_id},#{checkitem_id})
    </insert>

    <select id="findByCondition" parameterType="string" resultType="checkgroup">
        select * from t_checkgroup
        <where>
            <if test="value != null and value.length > 0">
                code = #{value} or helpCode = #{value} or name like #{value}
            </if>
        </where>
    </select>

    <!--根据检查组id删除中间表数据（清理原有关联关系）-->
    <delete id="deleteAssociation" parameterType="integer">
        delete from t_checkgroup_checkitem where checkgroup_id = #{id}
    </delete>
    <!--编辑-->
    <update id="edit" parameterType="CheckGroup">
        update t_checkgroup
        <set>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="sex != null">
                sex = #{sex},
            </if>
            <if test="code != null">
                code = #{code},
            </if>
            <if test="helpCode != null">
                helpCode = #{helpCode},
            </if>
            <if test="attention != null">
                attention = #{attention},
            </if>
            <if test="remark != null">
                remark = #{remark},
            </if>
        </set>
        where id = #{id}
    </update>

    <delete id="deleteCheckgroupById" parameterType="integer">
        delete from t_checkgroup where id = #{id}
    </delete>
</mapper>